<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1ecf2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER NUMBER"
            android:id="@+id/tvRegisterLabel"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0198546574"
            android:id="@+id/tvRegisterNumber"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvRegisterLabel"
            android:layout_toEndOf="@+id/tvRegisterLabel"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT"
            android:id="@+id/tvAmountLabel"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/tvRegisterLabel"
            android:layout_alignLeft="@+id/tvRegisterLabel"
            android:layout_alignStart="@+id/tvRegisterLabel"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 50"
            android:id="@+id/tvAmountValue"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignTop="@+id/tvAmountLabel"
            android:layout_alignLeft="@+id/tvRegisterNumber"
            android:layout_alignStart="@+id/tvRegisterNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT BALANCE"
            android:id="@+id/tvCurrentLabel"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_below="@+id/tvAmountLabel"
            android:layout_alignLeft="@+id/tvAmountLabel"
            android:layout_alignStart="@+id/tvAmountLabel"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM.65"
            android:id="@+id/tvCurrentBalance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_alignTop="@+id/tvCurrentLabel"
            android:layout_alignLeft="@+id/tvAmountValue"
            android:layout_alignStart="@+id/tvAmountValue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvOtpLabel"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@+id/tvCurrentLabel"
            android:layout_alignLeft="@+id/tvCurrentLabel"
            android:layout_alignStart="@+id/tvCurrentLabel"
            android:layout_marginTop="16dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/edOTP"
            android:textColor="#000000"
            android:background="@drawable/chooseamount_selector_edittext"
            android:layout_alignBottom="@+id/tvOtpLabel"
            android:layout_alignLeft="@+id/tvCurrentBalance"
            android:layout_alignStart="@+id/tvCurrentBalance"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Require"
            android:id="@+id/tvRequire"
            android:layout_below="@+id/tvOtpLabel"
            android:layout_alignLeft="@+id/edOTP"
            android:layout_alignStart="@+id/edOTP"
            android:textColor="#0000ff"
            android:layout_marginTop="8dp"/>


    </RelativeLayout>

    <Button
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/confirm_button"
        android:layout_gravity="bottom"
        android:id="@+id/btNext"/>

</LinearLayout>